<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/languageFlag"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:onClick="changeLangActivity"
        app:srcCompat="@mipmap/gb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/i_am_a_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/i_am_eng"
            android:textColor="#000000"
            android:textSize="@dimen/fontSize" />

        <Spinner
            android:id="@+id/professionDropdown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/fontSize"
            android:layout_weight="1"
            android:entries="@array/engReferrerOptions"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/toProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="toProfileAct"
            android:text="@string/register_eng"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/noRegister"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="toUrgent"
            android:text="@string/dont_register_eng"
            android:textSize="@dimen/fontSize" />

        <Button
            android:id="@+id/urgentCheckVolunteer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:text="Volunteer"
            android:textSize="@dimen/textSizeSmall" />

    </LinearLayout>

</LinearLayout>
